    marginHorizontal: 2,
    opacity: 0.6,
  },
  inputContainer: {
    flexDirection: 'row',
    padding: 15,
    borderTopWidth: 1,
    borderTopColor: '#e0e0e0',
    backgroundColor: '#f9f9f9',
    alignItems: 'flex-end',
  },
  textInputWrapper: {
    flex: 1,
    borderWidth: 1,
